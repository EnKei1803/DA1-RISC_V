//-----------------ADD_3_Conditional------------------

module MUX_ADD3
(
	input s,
	input [3:0] I0, I1,
	output [3:0] Y
);

    always @(*) begin
        case (s)
            1'b0: Y = I0;  
            1'b1: Y = I1;   
            default: Y = 4'b0; // Default (invalid case)
        endcase
    end	
	 
endmodule 